<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-gray-300 px-20 py-3">
        <h1 class="text-2xl text-center">Create a New Post.</h1>
        <hr class="mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="form-control my-3 border-red-500 " type="file" name="postImage">
            <input class="form-control my-3 border-red-500" type="text" placeholder="Title" name="title">
            <input class="form-control my-3 border-red-500 h-48" type="text" placeholder="Description" name="description">
            <button class="btn btn-danger my-1 form-control tracking-[.20em]" type="submit">UPLOAD</button>
        </form>

    </div>


